void loop() {

  
  for(pos = 180; pos <= 0; pos += 1)  {
  servo.write(pos);           
  delay(slow);                    
  }
 
  for(pos = 180; pos>=0; pos-=1){
  servo.write(pos);         
  delay(slow);            
  }
 
  for(pos = 0; pos <= 180; pos += 1)  {
  servo.write(pos);           
  delay(slow);                    
  }

}



