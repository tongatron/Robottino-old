void setup() {
  
  servo.attach(8);
  servo.write(90);  
  
  Wire.begin();
  SeeedOled.init(); 
  SeeedOled.clearDisplay();
  SeeedOled.drawBitmap(Robottino_logo,1024);  
  
  pinMode(buzzer,OUTPUT);
  pinMode(led_blue, OUTPUT);
  pinMode(led_green, OUTPUT);
  pinMode(led_red, OUTPUT);
  ledoff();
  
  delay(4000);
}

void loop() {
  
  SeeedOled.clearDisplay();
  SeeedOled.drawBitmap(mouth_zigzag,1024);    
  ledoff();
  delay(1000);
  rotate();
  voice(); 
}

